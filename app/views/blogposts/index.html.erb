<h1>Listing blogposts</h1>

<%= will_paginate @blogposts %>

<table>
		<col width="600">
		<col width="200">
		<col width="100">
<% @blogposts.each do |post| %>
		 	<tr>
				<td><b><%= post.header %></b></td><td><%= post.updated_at %></td><td>by: <%= post.user.name %></td>
			</tr>
			<tr>
				<td colspan="3"><br><%= post.content %><br><br><br></td>
			</tr>
<% end %>
</table>
<br>
<%= link_to 'New Blogpost', new_blogpost_path %>
