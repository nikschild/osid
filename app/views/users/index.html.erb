<h1>Listing users</h1>
<p>
<%= will_paginate @users %>

<table lass="pretty" id="rounded-corner">
	<colgroup>
  		<col width="80">
		<col width="80">
		<col width="40">
		<col width="40">
		<col width="40">
		<% if signed_in? && admin? %>
			<col width="50">
		<% end %>
	</colgroup>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Admin</th>
    <th>Active</th>
    <th>Lastlogin</th>
    <th>Admin</th>
  </tr>

<% @users.each do |user| %>
  <tr valign="top" align="left">
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.admin %></td>
    <td><%= user.active %></td>
    <td><%= user.lastlogin %></td>
    <% if signed_in? && admin? %>
    	<td><%= link_to 'Show', user %> |
    	<%= link_to 'Edit', edit_user_path(user) %> |
    	<%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>
<% if signed_in? && admin? %>
	<%= link_to 'New User', new_user_path %>
<% end %>