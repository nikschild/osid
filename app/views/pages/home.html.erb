<h2>OSID Statistics</h2>
<p>
<table>
	<colgroup>
  		<col width="100">
		<col width="100">
	</colgroup>
	<tr>
		<td># Incidents: </td><td><%= @incidents_count %> </td><td>updated at: </td><td><%= @incidents_latest.created_at.strftime("%Y-%m-%d") if @incidents_latest  %></td>
		</tr>
		<tr>
		<td># Events:  </td><td><%= @events_count %> </td><td>updated at: </td><td><%=  @events_latest.created_at.strftime("%Y-%m-%d") if @events_latest %></td>
		</tr>
		<tr>
		<td># Sources: </td><td><%= @sources_count %> </td><td>updated at: </td><td><%=  @sources_latest.created_at.strftime("%Y-%m-%d") if @sources_latest %></td>
		</tr>
		<tr>
		<td># Users:  </td><td><%= @users_count %> </td><td>updated at: </td><td><%=  @users_latest.created_at.strftime("%Y-%m-%d") if @users_latest %></td>
	</tr>
</table>				
</p>
<hr>
<h2>Add a new Incident</h2>
<p>
<%= link_to "...Submit", new_incident_path  %>
</p>

<h2>Search Incidents</h2>
<p>
<table>
<%= form_tag incidents_path, :method => :get do %>
<tr align="top" align="right">
	<td>
		<%= text_field_tag :search, params[:search] %>  	
	</td>
	<td>
		<%= submit_tag "Search", :name => nil %>				
	</td>
</tr>
<% end %>
</table>
</p>
<hr>
<h2>Latest News</h2>
<p>
<table>
	<col width="700">
	<col width="100">
	<col width="100">
	<% @blogposts.each do |post| %>
 	<tr>
		<td><b><%= link_to post.header, post %></b></td><td><%= post.updated_at.strftime("%Y-%m-%d") %></td><td>by: <%= post.user.name  %></td>
	</tr>
	<tr>
		<td colspan="3"><br><%= post.content %><br><br><br></td>
	</tr>
<% end %>
</table>
</p>