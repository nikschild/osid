<h3>Incident Details: <%= @incident.name %></h3
<p></p>

<%= link_to 'Back to Incidents', incidents_path %> | 
<%= link_to 'Add Event', new_event_path(:ref => @incident.id) %>
<% if signed_in? && admin? %>
| <%= link_to 'Edit', edit_incident_path(@incident) %> |
<%= link_to 'Delete', @incident, :confirm => 'Are you sure?', :method => :delete %>
<% end %>


<p id="notice"><%= notice %></p>

<table cellpadding="5" border="0">
  <colgroup>
    <col width="150">
    <col width="100">    
    <col width="300">    
    <col width="150">    
  </colgroup>  
  <tr>
    <td valign="top" align="right"><b>OSID ID:</b></td>
    <td valign="top" colspan="3"><%= @incident.id %></td>
</tr>
  <tr>
    <td valign="top" align="right"><b>Name:</b></td>
    <td valign="top" colspan="3"><%= @incident.name %></td>
</tr>
<tr>
    <td valign="top" align="right"><b>First Seen:</b></td>
    <td valign="top" colspan="3"><%= @incident.firstseen %></td>
  </tr>    
  <tr>
    <td valign="top" align="right"><b>Primary Victim:</b></td>
    <td valign="top" colspan="3"><%= @incident.pvname %> / <%= @incident.pvsector.name %> </td>
  </tr>
    <td valign="top" align="right"><b>Secondary Victim:</b></td>
    <td valign="top" colspan="3"><%= @incident.svname %> / <%= @incident.pvsector.name %> </td>
  </tr> 
  <tr>
    <td valign="top" align="right"><b>Attack Description:</b></td>
    <td valign="top" colspan="3"><%= @incident.attackdescription %> / <%= @incident.attack.name %></td>
  </tr>
  <tr>
    <td valign="top" align="right"><b>Attacker Description:</b></td>
    <td valign="top" colspan="3"><%= @incident.attackerdescription %> / <%= @incident.attacker.name %></td>
  </tr>
  <tr>
    <td valign="top" align="right"><b>Target Description:</b></td>
    <td valign="top" colspan="3"><%= @incident.targetdescription %> / <%= @incident.target.name %></td>
  </tr>
  <tr>
    <td valign="top" align="right"><b>Summary:</b></td>
    <td valign="top" colspan="3" colspan="3"><%= @incident.summary %></td>
  </tr>


  <tr>
    <td valign="top" align="right"><b>Timeline:</b></td>
    <td valign="top" align="left"><b>Date</b></td>
    <td valign="top" align="left"><b>Event</b></td>
  </tr>

	<% @incident.events.order("date DESC").each do |event| %>
  	<tr>
    	<td valign="top" align="right"></td>
    	<td><%= event.date %></td> 
    	<td><%= link_to event.name, event %> </td>
    	<% if signed_in? && admin? %>
    	<td><%= link_to 'Edit', edit_event_path(event) %></td>
 		<% end %>
 	</tr>
  	<tr>
    	<td valign="top" align="right"><b>Sources:</b></td>
    	<td valign="top" align="left"><b>Date</b></td>
    	<td valign="top" align="left"><b>Name</b></td>
    	<td valign="top" align="left"><b>Publisher</b></td>
    	<td valign="top" align="left"><b>Link</b></td>
  	</tr>    
		<% event.sources.order("publishingdate DESC").each do |source| %>
		<tr>
		<td valign="top" align="right"></td>
        <td valign="top"><%= source.publishingdate %></td>
        <td valign="top"><%= link_to source.name, source %> </td>
        <td valign="top"><%= source.publisher %>
        <td valign="top"><%= link_to "Link", source.reference %></td>
		</tr>
		<% end %>
 
  <% end %>   
  <tr>
    <td valign="top" align="right"><b>Submitted by:</b></td>
    <td valign="top" colspan="3" ><%= @incident.user.name %></td>
  </tr>
</table>